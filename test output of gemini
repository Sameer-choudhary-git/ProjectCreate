import React from 'react';
import { BrowserRouter, Routes, Route, Navigate } from 'react-router-dom';
import { LandingPage } from '@/pages/LandingPage';
import { DashboardLayout } from '@/components/layout/DashboardLayout';
import { Overview } from '@/pages/dashboard/Overview';
import { Opportunities } from '@/pages/dashboard/Opportunities';
import { Strategies } from '@/pages/dashboard/Strategies';


// Placeholder components for routes not yet fully implemented
const Placeholder = ({ title }: { title: string }) => (

<div className="flex items-center justify-center h-[50vh] text-slate-500">
<div className="text-center">
<h2 className="text-2xl font-bold text-slate-300 mb-2">{title}</h2>
<p>This module is under development.</p>
</div>
</div>
);


function App() {
return (
<BrowserRouter>
<Routes>
<Route path="/" element={<LandingPage />} />

code
Code
download
content_copy
expand_less
<Route path="/dashboard" element={<DashboardLayout><Overview /></DashboardLayout>} />
    <Route path="/dashboard/opportunities" element={<DashboardLayout><Opportunities /></DashboardLayout>} />
    <Route path="/dashboard/strategies" element={<DashboardLayout><Strategies /></DashboardLayout>} />
    
    <Route path="/dashboard/history" element={<DashboardLayout><Placeholder title="Transaction History" /></DashboardLayout>} />
    <Route path="/dashboard/performance" element={<DashboardLayout><Placeholder title="Performance Analytics" /></DashboardLayout>} />
    <Route path="/dashboard/settings" element={<DashboardLayout><Placeholder title="Settings" /></DashboardLayout>} />
    
    <Route path="*" element={<Navigate to="/" replace />} />
  </Routes>
</BrowserRouter>

);
}

export default App;
