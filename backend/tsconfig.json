{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",  // Change "./src" to "." so it can see root files
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "prisma.config.ts", "generated"], // Add the config file here
  "exclude": ["node_modules", "dist"]
}